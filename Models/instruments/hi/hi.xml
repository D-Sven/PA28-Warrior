<?xml version="1.0"?>

<PropertyList>

 <path>hi.ac</path>
 
 <animation>
  <type>scale</type>
  <x-offset>1.0</x-offset>
  <y-offset>1.0</y-offset>
  <z-offset>1.0</z-offset>
 </animation>
 
	<params>
		<selected-heading>it-autoflight/input/hdg</selected-heading>
	</params>

 <animation>
<type>select</type>
  <object-name>Face</object-name>
  <object-name>Front</object-name>
  <object-name>OBS-Knob</object-name>
  <object-name>Hdg-Knob</object-name>
  <object-name>HdgBug</object-name>
  <object-name>click-bug-L</object-name>
  <object-name>click-bug-R</object-name>
  <object-name>click-offset-L</object-name>
  <object-name>click-offset-R</object-name>
  
<condition>
           <not>
            <property>/instrumentation/ths</property>
          </not>
      </condition>
</animation>

 <animation>
  <type>material</type>
  <object-name>Face</object-name>
  <object-name>Front</object-name>

  
  <emission>
   <red>1.0</red>
   <green>0.2</green>
   <blue>0.0</blue>
   <factor-prop>/sim/model/material/instruments/factor</factor-prop>
  </emission>
 </animation>
 
  <animation>
    <type>pick</type>
    <object-name>Front</object-name>
  <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hdbug</tooltip-id>
                <mapping>hdbug</mapping>
                <label>Heading: %3d</label>
                <property>instrumentation/heading-indicator/indicated-heading-deg</property>
            </binding>
        </hovered>
    </animation>

 <animation>
  <type>material</type>
  <object-name>OBS-Knob</object-name>
  <object-name>Hdg-Knob</object-name>
  <emission>
   <red>0.45</red>
   <green>0.09</green>
   <blue>0.00001</blue>
   <factor-prop>/sim/model/material/instruments/factor</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Face</object-name>
  <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
  <factor>-1</factor>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>HdgBug</object-name>
  <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
  <factor>-1</factor>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>HdgBug</object-name>
   <property>/it-autoflight/input/hdg</property>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

<!--     Heading Bug control    -->
	<animation>
		<type>pick</type>
		<object-name>Hdg-Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/selected-heading"/>
				<step>1</step>
				<min>1</min>
				<max>361</max>
				<wrap>1</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/selected-heading"/>
				<step>-1</step>
				<min>1</min>
				<max>361</max>
				<wrap>1</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>heading-bug</tooltip-id>
				<mapping>heading</mapping>
				<label>Heading Bug: %3d</label>
				<property>it-autoflight/input/hdg</property>
			</binding>
		</hovered>
	</animation>

</PropertyList>
