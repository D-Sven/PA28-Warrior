<PropertyList>
	
	<path>AttitudeGyro.ac</path>
	
	<params>
		<pitch>instrumentation/stby-ai/pitch-deg</pitch>
		<roll>instrumentation/stby-ai/roll-deg</roll>
		<pitch-reference>instrumentation/stby-ai/pitch-reference-offset-deg</pitch-reference>
	</params>

	<animation>
		<type>scale</type>
		<x-offset>0.95</x-offset>
		<y-offset>0.95</y-offset>
		<z-offset>0.95</z-offset>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Pitch</object-name>
		<object-name>Roll</object-name>
		<object-name>RollReference</object-name>
		<object-name>PitchReference</object-name>
		<object-name>Background</object-name>
		<emission>
			<red>0.6</red>
			<green>0.6</green>
			<blue>0.6</blue>
			<factor-prop>sim/model/material/instruments/factor</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<name>Roll</name>
		<type>rotate</type>
		<object-name>Roll</object-name>
		<object-name>Pitch</object-name>
		<object-name>Background</object-name>
		<object-name>Shade</object-name>
		<property alias="../../params/roll"/>
		<factor>1.0</factor>
		<min-deg>-100</min-deg>
		<max-deg>100</max-deg>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<name>Pitch</name>
		<type>translate</type>
		<object-name>Pitch</object-name>
		<property alias="../../params/pitch"/>
		<factor>-0.000778632</factor>
		<min-m>-0.01575</min-m>
		<max-m>0.01575</max-m>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>
	
	<animation>
		<name>PitchReference</name>
		<type>translate</type>
		<object-name>PitchReference</object-name>
		<property alias="../../params/pitch-reference"/>
		<factor>-0.000778632</factor>
		<min-m>-0.01575</min-m>
		<max-m>0.01575</max-m>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>Knob</object-name>
		<action>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property alias="../../params/pitch-reference"/>
			<factor type="double">0.5</factor>
		</binding>
		</action>
		<value>0.0</value>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.03273</z-m>
		</center>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>ai-horizon-offset</tooltip-id>
				<label>Horizon Offset: %2d</label>
				<property alias="../../params/pitch-reference"/>
			</binding>
		</hovered>
	</animation>

</PropertyList>
