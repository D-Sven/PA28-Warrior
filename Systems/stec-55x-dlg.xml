<?xml version="1.0" encoding="UTF-8" ?>

<!-- S-TEC Fifty Five X Autopilot Control Dialog -->
<!-- Copyright (c) 2018 Joshua Davidson (it0uchpods) -->

<PropertyList>

	<name>autopilot</name>
	<layout>vbox</layout>
	
    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>IT-AUTOFLIGHT System (S-TEC Fifty Five X)</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
	<group>
		<layout>table</layout>
		
        <text>
            <row>0</row>
			<col>0</col>
            <label>HDG</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/hdg</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>1</col>
            <label>NAV</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<or>
						<equals>
							<property>/it-autoflight/annun/nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>/it-autoflight/annun/nav-flash</property>
							<value>1</value>
						</equals>
					</or>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>2</col>
            <label>APR</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/apr</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>3</col>
            <label>REV</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/rev</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>4</col>
            <label>TRIM</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<or>
						<equals>
							<property>/it-autoflight/annun/up</property>
							<value>1</value>
						</equals>
						<equals>
							<property>/it-autoflight/annun/dn</property>
							<value>1</value>
						</equals>
					</or>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>5</col>
            <label>ALT</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/alt</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>6</col>
            <label>GS</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/gs</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>0</row>
			<col>7</col>
            <label>VS</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/vs</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>0</col>
            <label>RDY</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/rdy</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>1</col>
            <label>CWS</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/cws</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>2</col>
            <label>FAIL</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/fail</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>3</col>
            <label>GPSS</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<or>
						<equals>
							<property>/it-autoflight/annun/gpss</property>
							<value>1</value>
						</equals>
						<and>
							<equals>
								<property>/it-autoflight/annun/nav-flash</property>
								<value>1</value>
							</equals>
							<equals>
								<property>/it-autoflight/output/roll</property>
								<value>4</value>
							</equals>
						</and>
					</or>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>4</col>
            <label>UP</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/up</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>4</col>
            <label>DN</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/annun/dn</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>6</col>
            <label>+</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>it-autoflight/annun/vs</property>
						<value>1</value>
					</equals>
					<greater-than-equals>
						<property>/it-autoflight/input/vs</property>
						<value>0</value>
					</greater-than-equals>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>6</col>
            <label>-</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>it-autoflight/annun/vs</property>
						<value>1</value>
					</equals>
					<less-than>
						<property>/it-autoflight/input/vs</property>
						<value>0</value>
					</less-than>
				</and>
			</visible>
        </text>
		
        <text>
            <row>1</row>
			<col>7</col>
            <label>99</label>
			<visible>
				<and>
					<equals>
						<property>/it-autoflight/internal/hasPower</property>
						<value>1</value>
					</equals>
					<equals>
						<property>it-autoflight/annun/vs</property>
						<value>1</value>
					</equals>
				</and>
			</visible>
			<property>/it-autoflight/input/vs-abs</property>
			<live>1</live>
        </text>
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		
		<button>
			<legend>HDG</legend>
			<pref-width>40</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.HDG();</script>
			</binding>
		</button>
		
		<button>
			<legend>+</legend>
			<pref-width>15</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.CNAV();</script>
			</binding>
		</button>
		
		<button>
			<legend>NAV</legend>
			<pref-width>40</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.NAV();</script>
			</binding>
		</button>
		
		<button>
			<legend>APR</legend>
			<pref-width>40</pref-width>
			<binding>

			</binding>
		</button>
		
		<button>
			<legend>REV</legend>
			<pref-width>40</pref-width>
			<binding>

			</binding>
		</button>
		
		<button>
			<legend>ALT</legend>
			<pref-width>40</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.ALT();</script>
			</binding>
		</button>
		
		<button>
			<legend>VS</legend>
			<pref-width>40</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.VS();</script>
			</binding>
		</button>
		
		<button>
			<legend>DECR</legend>
			<pref-width>45</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.Knob(-1);</script>
			</binding>
		</button>
		
        <text>
            <label>VS x 100</label>
        </text>
		
		<button>
			<legend>INCR</legend>
			<pref-width>45</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.Knob(1);</script>
			</binding>
		</button>
		
		<button>
			<legend>DISC</legend>
			<pref-width>40</pref-width>
			<binding>
				<command>nasal</command>
				<script>stec55x.button.DISC();</script>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		
		<checkbox>
			<label>Autopilot Master</label>
			<halign>center</halign>
			<property>/it-autoflight/input/ap-master-sw</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
		
		<checkbox>
			<label>Elec Trim Servo</label>
			<halign>center</halign>
			<property>/it-autoflight/input/electric-trim-sw</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
	</group>

</PropertyList>
