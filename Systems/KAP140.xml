<?xml version="1.0"?>

<!-- KAP140 Autopilot -->
<!-- Tries to behave like KAP140 Dual Axis Autopilot with Altitude Preselect -->
<!-- Completely custom autopilot configuration -->
<!-- Joshua Davidson (it0uchpods) -->

<PropertyList>

 <!-- =============================================================== -->
 <!-- Roll Axis Modes                                                 -->
 <!-- =============================================================== -->

	<!-- Heading Select (HDG) Mode -->
	<pi-simple-controller>
		<name>Heading Select (HDG) Mode</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot/KAP140/locks/nav-hold</property>
						<value>true</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/KAP140/locks/apr-hold</property>
						<value>true</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/KAP140/locks/rev-hold</property>
						<value>true</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/heading-bug-error-deg</property>
			<scale>1.0</scale>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-1.5</Kp>
			<Ki>0.0</Ki>
			<min>-15</min>
			<max>15</max>
		</config>
	</pi-simple-controller>
	
	<!-- Navigation/Approach (NAV/APR) Mode -->
	<filter>
		<name>Navigation Error Deg</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<property>/instrumentation/nav[0]/radials/target-auto-hdg-deg</property>
			<offset>
				<property>/orientation/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<output>/autopilot/internal/nav-heading-error-deg</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
		<gain>1.0</gain>
	</filter>
	
	<pid-controller>
		<name>Navigation/Approach (NAV/APR) Mode</name>
		<debug>false</debug>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/autopilot/KAP140/locks/nav-hold</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/autopilot/KAP140/locks/apr-hold</property>
						<value>true</value>
					</equals>
					<!--equals>
						<property>/autopilot/KAP140/locks/rev-hold</property>
						<value>true</value>
					</equals-->
				</or>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/nav-heading-error-deg</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.0</Kp>
			<beta>1.0</beta>	
			<alpha>0.1</alpha>	
			<gamma>0.0</gamma>		
			<Ti>10.0</Ti>      
			<Td>0.00001</Td>   	
			<u_min>-15</u_min>
			<u_max>15</u_max>
		</config>
	</pid-controller>
  
	<filter>
		<name>TARGET ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<property>/autopilot/KAP140/internal/target-roll-deg</property>
		</input>
		<output>/autopilot/KAP140/internal/target-roll</output>
		<type>noise-spike</type>
		<max-rate-of-change>15</max-rate-of-change>
	</filter>
	
	<pid-controller>
		<name>ROLL</name>
		<debug>false</debug>
		<enable>
			<property>/autopilot/KAP140/locks/roll-axis</property>
			<value>true</value>
		</enable>
		<input>
			<property>/orientation/roll-deg</property>
		</input>
		<reference>
			<condition>
				<or>
					<equals>
						<property>/autopilot/KAP140/locks/hdg-hold</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/autopilot/KAP140/locks/nav-hold</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/autopilot/KAP140/locks/apr-hold</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/autopilot/KAP140/locks/rev-hold</property>
						<value>true</value>
					</equals>
				</or>
			</condition>
			<property>/autopilot/KAP140/internal/target-roll</property>
		</reference>
		<reference>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot/KAP140/locks/hdg-hold</property>
						<value>true</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/KAP140/locks/nav-hold</property>
						<value>true</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/KAP140/locks/apr-hold</property>
						<value>true</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/KAP140/locks/rev-hold</property>
						<value>true</value>
					</not-equals>
				</and>
			</condition>
			<value>0</value>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/aileron-cmd</property>
		</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1.0</beta>	
			<alpha>0.1</alpha>	
			<gamma>0.0</gamma>	
			<Ti>10.0</Ti>    
			<Td>0.00001</Td>    	
			<u_min>-0.4</u_min>
			<u_max>0.4</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<property>/autopilot/KAP140/locks/roll-axis</property>
			<value>true</value>
		</enable>
		<input>
			<property>/autopilot/KAP140/internal/aileron-cmd</property>
		</input>
		<output>/controls/flight/aileron</output>
		<type>noise-spike</type>
		<max-rate-of-change>0.9</max-rate-of-change>
	</filter>

 <!-- =============================================================== -->
 <!-- Pitch Axis Modes                                                -->
 <!-- =============================================================== -->
	
	<filter>
		<name>Pressure Rate Filter</name>
		<debug>false</debug>
		<type>double-exponential</type>
		<input>/autopilot/internal/pressure-rate</input>
		<output>/autopilot/internal/filtered-pressure-rate</output>
		<filter-time>0.1</filter-time>
	</filter>

	<filter>
		<name>Target Pressure Rate to FPM</name>
		<debug>false</debug>
		<type>gain</type>
		<input>/autopilot/KAP140/settings/target-pressure-rate</input>
		<output>/autopilot/KAP140/settings/target-pressure-rate-fpm</output>
		<gain>-58000</gain>
	</filter>
	
	<predict-simple>
		<name>ALTITUDE PRESSURE 5 SECONDS AHEAD</name>
		<debug>false</debug>
		<input>/systems/static[0]/pressure-inhg[0]</input>
		<output>/autopilot/KAP140/internal/lookahead-5-sec-static-pres</output>
		<seconds>5.0</seconds>
		<filter-gain>0.1</filter-gain>
	</predict-simple>

	<!-- Altitude Hold (ALT) Mode --> 
	<pid-controller>
		<name>Altitude Hold (ALT) Mode</name>
		<debug>false</debug>
		<enable>
			<property>/autopilot/KAP140/locks/alt-hold</property>
			<value>true</value>
		</enable>
		<input>
			<property>/autopilot/KAP140/internal/lookahead-5-sec-static-pres</property>
		</input>
		<reference>
			<property>/autopilot/KAP140/settings/target-alt-pressure</property>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>-20</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>5.0</Ti>
			<Td>0.0</Td>
			<u_min>-5</u_min>
			<u_max>8</u_max>
		</config>
	</pid-controller>

	<!-- Glideslope Hold (GS) Mode --> 
	<pid-controller>
		<name>Glideslope Hold (GS) Mode</name>
		<debug>false</debug>
		<enable>
			<property>/autopilot/KAP140/locks/gs-hold</property>
			<value>true</value>
		</enable>
		<input>
			<property>/velocities/vertical-speed-fps</property>
		</input>
		<reference>
			<property>/instrumentation/nav[0]/gs-rate-of-climb</property>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>0.10</Kp>       
			<beta>1.0</beta>       
			<alpha>0.5</alpha>     
			<gamma>0.0</gamma>			
			<Ti>10.0</Ti>
			<Td>0.0001</Td>
			<u_min>-5</u_min>
			<u_max>7</u_max>
		</config>
	</pid-controller>

	<!-- Vertical Speed (VS) Mode --> 
	<pid-controller>
		<name>Vertical Speed (VS) Mode</name>
		<debug>false</debug>
		<enable>
			<condition>
				<not-equals>
					<property>/autopilot/KAP140/locks/alt-hold</property>
					<value>true</value>
				</not-equals>
				<not-equals>
					<property>/autopilot/KAP140/locks/gs-hold</property>
					<value>true</value>
				</not-equals>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
			<scale>0.01666666</scale>
		</input>
		<reference>
			<property>/autopilot/KAP140/settings/target-pressure-rate-fpm</property>
			<scale>0.01666666</scale>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>0.15</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>1.0</Ti>
			<Td>0.000001</Td>
			<u_min>-10</u_min>
			<u_max>15</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>TARGET PITCH CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<property>/autopilot/KAP140/internal/target-pitch-deg</property>
		</input>
		<output>/autopilot/KAP140/internal/target-pitch</output>
		<type>noise-spike</type>
		<max-rate-of-change>10</max-rate-of-change>
	</filter>
	
	<pid-controller>
		<name>PITCH</name>
		<debug>false</debug>
		<enable>
			<property>/autopilot/KAP140/locks/pitch-axis</property>
			<value>true</value>
		</enable>
		<input>
			<property>/orientation/pitch-deg</property>
		</input>
		<reference>
			<property>/autopilot/KAP140/internal/target-pitch</property>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/elevator-cmd</property>
		</output>
		<config>
			<Kp>-0.02</Kp>
			<beta>1.0</beta>    
			<alpha>0.1</alpha>  
			<gamma>0.0</gamma>  
			<Ti>10.0</Ti>      
			<Td>0.0001</Td>   
			<u_min>-0.4</u_min>
			<u_max>0.4</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>PITCH CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<property>/autopilot/KAP140/locks/pitch-axis</property>
			<value>true</value>
		</enable>
		<input>
			<property>/autopilot/KAP140/internal/elevator-cmd</property>
		</input>
		<output>/controls/flight/elevator</output>
		<type>noise-spike</type>
		<max-rate-of-change>0.4</max-rate-of-change>
	</filter>
	
 <!-- =============================================================== -->
 <!-- Autotrim                                                        -->
 <!-- =============================================================== -->
	
	<pid-controller>
		<name>AP PITCH HELPER PLUS</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<greater-than>
						<property>/autopilot/KAP140/internal/elevator-cmd</property>
						<value>0.01</value>
					</greater-than>
					<equals>
						<property>/autopilot/KAP140/locks/pitch-axis</property>
						<value>true</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<value>0</value>
		</input>
		<reference>
			<value>1</value>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/elevator-trim-cmd</property>
		</output>
		<config>
			<Kp>0.08</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>-1.00</u_min>
			<u_max>1.00</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>AP PITCH HELPER MINUS</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<less-than>
						<property>/autopilot/KAP140/internal/elevator-cmd</property>
						<value>-0.01</value>
					</less-than>
					<equals>
						<property>/autopilot/KAP140/locks/pitch-axis</property>
						<value>true</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<value>0</value>
		</input>
		<reference>
			<value>1</value>
		</reference>
		<output>
			<property>/autopilot/KAP140/internal/elevator-trim-cmd</property>
		</output>
		<config>
			<Kp>-0.08</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>-1.00</u_min>
			<u_max>1.00</u_max>
		</config>
	</pid-controller>
		
	<filter>
		<name>IT-CONTROLLER: PITCH TRIM CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<or>
						<greater-than>
							<property>/autopilot/KAP140/internal/elevator-cmd</property>
							<value>0.01</value>
						</greater-than>
						<less-than>
							<property>/autopilot/KAP140/internal/elevator-cmd</property>
							<value>-0.01</value>
						</less-than>
					</or>
					<equals>
						<property>/autopilot/KAP140/locks/pitch-axis</property>
						<value>true</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/KAP140/internal/elevator-trim-cmd</property>
		</input>
		<output>/controls/flight/elevator-trim</output>
		<type>noise-spike</type>
		<max-rate-of-change>0.01</max-rate-of-change>
	</filter>

</PropertyList>
