<PropertyList>

	<filter>
		<name>Gear AGL Altitude FT</name>
		<type>gain</type>
		<gain>1</gain>
		<update-interval-secs type="double">0.05</update-interval-secs>
		<input> 
			<expression>
				<dif>
					<property>/position/altitude-agl-ft</property>
					<value>3.42</value>
				</dif>
			</expression>
		</input>
		<output>/position/gear-agl-ft</output>
		<min>0</min>
		<max>50000</max>
	</filter>
	
	<filter>
		<name>Gear AGL Altitude M</name>
		<type>gain</type>
		<gain>1</gain>
		<update-interval-secs type="double">0.05</update-interval-secs>
		<input> 
			<expression>
				<product>
					<property>/position/gear-agl-ft</property>
					<value>0.3048</value>
				</product>
			</expression>
		</input>
		<output>/position/gear-agl-m</output>
		<min>0</min>
		<max>50000</max>
	</filter>

	<filter>
		<name>CDI0 lowpass</name>
		<debug>false</debug>
		<type>exponential</type>
		<filter-time>2.0</filter-time>
		<input>/instrumentation/nav[0]/heading-needle-deflection</input>
		<output>/instrumentation/nav[0]/filtered-cdiNAV0-deflection</output>
	</filter>

	<filter>
		<name>CDI1 lowpass</name>
		<debug>false</debug>
		<type>exponential</type>
		<filter-time>2.0</filter-time>
		<input>/instrumentation/nav[1]/heading-needle-deflection</input>
		<output>/instrumentation/nav[1]/filtered-cdiNAV1-deflection</output>
	</filter>

	<filter>
		<name>GS0 lowpass</name>
		<debug>false</debug>
		<type>exponential</type>
		<filter-time>2.0</filter-time>
		<input>/instrumentation/nav[0]/gs-needle-deflection-norm</input>
		<output>/instrumentation/nav[0]/filtered-gsNAV0-deflection</output>
	</filter>

	<filter>
		<name>GS1 lowpass</name>
		<debug>false</debug>
		<type>exponential</type>
		<filter-time>2.0</filter-time>
		<input>/instrumentation/nav[1]/gs-needle-deflection-norm</input>
		<output>/instrumentation/nav[1]/filtered-gsNAV1-deflection</output>
	</filter>
	
	<filter>
		<name>RUDDER COMMANDER</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<condition>
				<and>
					<or>
						<equals>
							<property>/gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>/gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
					<equals>
						<property>/options/slave-rudder</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<property>/controls/flight/aileron</property>
			<scale>0.5</scale>
		</input>
		<input>/controls/flight/rudder</input>
		<output>/controls/flight/rudder-slave</output>
	</filter>
	
	<filter>
		<name>AUTOCOORDINATOR BYPASS</name>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/options/autocoordinate</property>
						<value>1</value>
					</not-equals>
					<greater-than-equals>
						<property>/controls/flight/rudder-slave</property>
						<value>0.1</value>
					</greater-than-equals>
					<less-than-equals>
						<property>/controls/flight/rudder-slave</property>
						<value>-0.1</value>
					</less-than-equals>
				</or>
			</condition>
		</enable>
		<input>0</input>
		<output>/controls/flight/rudder-ac</output>
	</filter>
	
	<pid-controller>
		<name>AUTOCOORDINATOR</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/options/autocoordinate</property>
						<value>1</value>
					</equals>
					<less-than>
						<property>/controls/flight/rudder-slave</property>
						<value>0.1</value>
					</less-than>
					<greater-than>
						<property>/controls/flight/rudder-slave</property>
						<value>-0.1</value>
					</greater-than>
				</and>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/controls/flight/rudder-ac</property>
		</output>
		<config>
			<Kp>0.075</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>3.0</Ti>
			<Td>0.00001</Td>
			<u_min>-0.2</u_min>
			<u_max>0.2</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>System Command: Rudder Option</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/options/autocoordinate</property>
						<value>1</value>
					</equals>
					<less-than>
						<property>/controls/flight/rudder-slave</property>
						<value>0.1</value>
					</less-than>
					<greater-than>
						<property>/controls/flight/rudder-slave</property>
						<value>-0.1</value>
					</greater-than>
				</and>
			</condition>
			<property>/controls/flight/rudder-ac</property>
		</input>
		<input>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/options/autocoordinate</property>
						<value>0</value>
					</not-equals>
					<greater-than-equals>
						<property>/controls/flight/rudder-slave</property>
						<value>0.1</value>
					</greater-than-equals>
					<less-than-equals>
						<property>/controls/flight/rudder-slave</property>
						<value>-0.1</value>
					</less-than-equals>
				</or>
			</condition>
			<property>/controls/flight/rudder-slave</property>
		</input>
		<output>/controls/flight/rudder-fdm</output>
	</filter>

</PropertyList>

